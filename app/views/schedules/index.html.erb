<div class="header">
  <p>予定一覧</p>
  <p><%= link_to "新規追加", :new_schedule, class: 'btn' %></p>
</div>

<% if flash[:notice] %>
  <div class="alert alert-success">
    <%= flash[:notice] %>
  </div>
<% elsif flash[:alert] %>
  <div class="alert alert-danger">
    <%= flash[:alert] %>
  </div>
<% end %>



<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>開始日</th>
      <th>終了日</th>
      <th>終日</th>
      <th>更新日時</th>
    </tr>
  </thead>

  <tbody class="small-text">
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.id %></td>
        <td class="wide"><%= schedule.title %></td>
        <td><%= schedule.start_date.strftime("%Y/%m/%d") %></td>
        <td><%= schedule.end_date.strftime("%Y/%m/%d") %></td>
        <td class="text-center"><%= schedule.all_day ? '⚪︎' : '' %></td>
        <td><%= schedule.updated_at.in_time_zone('Tokyo').strftime("%Y/%m/%d %H:%M") %></td>
        <td><%= link_to "詳細", schedule %></td>
        <td><%= link_to "編集", [:edit, schedule] %></td>
        <td><a href="#" class="delete-link" data-toggle="modal" data-target="#deleteModal" data-url="<%= schedule_path(schedule) %>">削除</a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div>
  <a><%= "予定合計：#{@schedules.count}件" %></a>
  <a><%= "本日の日付：#{Date.today.strftime("%Y/%m/%d")}" %></a>
</div>


<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">削除確認画面</h4>
            </div>
            <div class="modal-body">
                <label>このスケジュールを削除しますか？</label>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">閉じる</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">削除</button>
            </div>
        </div>
    </div>
</div>

