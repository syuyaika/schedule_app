<div class="header">
  <p>予定一覧</p>
  <p><%= link_to "新規追加", :new_schedule %></p>
</div>

<% if flash[:notice] %>
    <p class="notice"><%= flash[:notice] %></p>
<% end %>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>開始日</th>
      <th>終了日</th>
      <th>終日</th>
      <th>更新日時</th>

    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.id %></td>
        <td><%= schedule.title %></td>
        <td><%= schedule.start_date.strftime("%Y/%m/%d") %></td>
        <td><%= schedule.end_date.strftime("%Y/%m/%d") %></td>
        <td><%= schedule.all_day ? '⚪︎' : '' %></td>
        <td><%= schedule.updated_at.in_time_zone('Tokyo').strftime("%Y/%m/%d %H:%M") %></td>
        <td><%= link_to "詳細", schedule %></td>
        <td><%= link_to "編集", [:edit, schedule] %></td>
        <td><%= button_to "削除", schedule, method: :delete, data: { confirm: "予定を削除しますか？" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class ="information">
        <a class = "information-1" ><%= "予定合計：#{@schedules.count}件" %></a>
        <a class = "information-2" ><%= "本日の日付：#{Date.today.strftime("%Y/%m/%d")}" %></a>
    </div>
